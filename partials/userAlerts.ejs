<% if(alerts.updateFail) { %>
    <div class="alert alert-danger alert-dismissible fade show text-center" style="max-width: 700px; margin: 0 auto;" role="alert" id="noAdd" onshow="setTimeout(hideAlert, 3000)">
        Failed to Update Information
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
<% } %>

<% if(alerts.updatePass) { %>
    <div class="alert alert-success alert-dismissible fade show text-center" style="max-width: 700px; margin: 0 auto;" role="alert" id="noAdd" onshow="setTimeout(hideAlert, 3000)">
        Successful Update
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
<% } %>

<% if(alerts.oldPassword) { %>
    <div class="alert alert-danger alert-dismissible fade show text-center" style="max-width: 700px; margin: 0 auto;" role="alert" id="noAdd" onshow="setTimeout(hideAlert, 3000)">
        Old Password Incorrect
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
<% } %>